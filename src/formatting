#!/usr/bin/env bash

function title() {
    tput bold
    echo $1
    tput sgr0
}

function path() {
    tput setaf 3 sitm
    echo -n $1
    tput sgr0
}

function group_start() {
    depth=${1:-0}
    while [ $depth -gt 0 ]; do
        echo -n "│"
        depth=$(( $depth - 1 ))
    done
    echo "┌── $2"
}

function group() {
    depth=${1:-0}
    while [ $depth -gt 0 ]; do
        echo -n "│"
        depth=$(( $depth - 1 ))
    done
    echo " $2"
}


function group_end() {
    depth=${1:-0}
    while [ $depth -gt 0 ]; do
        echo -n "│"
        depth=$(( $depth - 1 ))
    done
    echo "└─"
}
